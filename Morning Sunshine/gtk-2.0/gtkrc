			file		= "Images/Shadows/frame-out.png"
			border		= {4, 4, 4, 4}
		}
		image
		{
			function	= SHADOW
			shadow		= ETCHED_OUT
			file		= "Images/Shadows/frame-out.png"
			border		= {4, 4, 4, 4}
		}
