style "frame"
{
	engine "pixmap"
	{
		image
		{
			function	= SHADOW_GAP
			shadow		= IN
	    		recolorable	= TRUE
	    		file		= "Images/Shadows/frame-in.png"
	    		border		= {4, 4, 4, 4}
	    		stretch		= TRUE
	    		gap_start_file	= "Images/Shadows/frame-in-gap-start.png"
	    		gap_start_border= { 8, 0, 8, 0}
	    		gap_end_file	= "Images/Shadows/frame-in-gap-end.png"
	    		gap_end_border	= { 0, 5, 5, 0}
	    		gap_side	= TOP
		}

		image
		{
			function	= SHADOW_GAP
			shadow		= OUT
	    		recolorable	= TRUE
	    		file		= "Images/Shadows/frame-out.png"
	    		border		= {4, 4, 4, 4}
	    		stretch		= TRUE
	    		gap_start_file	= "Images/Shadows/frame-out-gap-start.png"
	    		gap_start_border= { 8, 0, 8, 0}
	    		gap_end_file	= "Images/Shadows/frame-out-gap-end.png"
	    		gap_end_border	= { 0, 5, 5, 0}
	    		gap_side	= TOP
		}

		image
		{
			function	= SHADOW_GAP
			shadow		= ETCHED_OUT
	    		recolorable	= TRUE
	    		file		= "Images/Shadows/frame-out.png"
	    		border		= {4, 4, 4, 4}
	    		stretch		= TRUE
	    		gap_start_file	= "Images/Shadows/frame-out-gap-start.png"
	    		gap_start_border= { 7, 0, 7, 0}
	    		gap_end_file	= "Images/Shadows/frame-out-gap-end.png"
	    		gap_end_border	= { 0, 7, 7, 0}
	    		gap_side	= TOP
		}

		image
		{
			function	= SHADOW_GAP
			shadow		= ETCHED_IN
	    		recolorable	= TRUE
	    		file		= "Images/Shadows/frame-in.png"
	    		border		= {4, 4, 4, 4}
	    		stretch		= TRUE
	    		gap_start_file	= "Images/Shadows/frame-in-gap-start.png"
	    		gap_start_border= { 8, 0, 8, 0}
	    		gap_end_file	= "Images/Shadows/frame-in-gap-end.png"
	    		gap_end_border	= { 0, 5, 5, 0}
	    		gap_side	= TOP
		}

	}
}

