gtk_color_scheme = "fg_color:#292929\nbg_color:#F2E1BE\nbase_color:#F5EDDC\ntext_color:#292929\nselected_bg_color:#bacada\nselected_fg_color:#ffffff\ntooltip_bg_color:#bacada\ntooltip_fg_color:#292929\nfg_tabcolor:#000000\nfg_selected_tabcolor:#ffffff"

style "default"
{	
	GtkScrolledWindow	:: scrollbars-within-bevel	= 1
	GtkScrolledWindow	:: scrollbar-spacing		= 0
	GtkScrolledWindow	:: shadow_type			= GTK_SHADOW_OUT

	GtkNotebook	::tab-curvature		= 6
	GtkNotebook	::tab-overlap		= 7

	GtkToolBar	::shadow_type		= GTK_SHADOW_NONE

	GtkMenuBar	::shadow_type		= GTK_SHADOW_NONE


	GtkStatusbar	::shadow_type		= GTK_SHADOW_NONE

	GtkPaned	::handle-size		= 8

	GtkExpander	::expander-size		= 12
	GtkTreeView	::expander-size		= 12

	GtkMenu		::horizontal-offset	= 0

	GtkMenuItem	::toggle-spacing	= 10

	GtkRange	::slider-width		= 10

	bg[NORMAL]       	= @bg_color
	bg[ACTIVE]       	= shade (1.0233,@bg_color)
	bg[PRELIGHT]      	= @bg_color
	bg[SELECTED]      	= @selected_bg_color
	bg[INSENSITIVE]  	= shade (1.03,@bg_color)

	fg[NORMAL]       	= @fg_color
	fg[ACTIVE]       	= @fg_color
	fg[PRELIGHT]     	= @fg_color
	fg[SELECTED]     	= @selected_fg_color
	fg[INSENSITIVE]  	= mix (0.5, @fg_color, @bg_color)

	base[NORMAL]     	= @base_color
	base[ACTIVE]     	= @selected_bg_color
	base[PRELIGHT]   	= @base_color
	base[SELECTED]  	= @selected_bg_color
	base[INSENSITIVE]	= @base_color

	text[NORMAL]     	= @text_color
	text[ACTIVE]      	= @fg_color
	text[PRELIGHT]   	= @selected_fg_color
	text[SELECTED]   	= @selected_fg_color
	text[INSENSITIVE]	= mix (0.675,"#000000",@fg_color)

	engine "pixmap"
	{
		image
		{
			function	= HLINE
			file		= "Images/Lines/hline.png"
			border		= {1,1,1,1}
			stretch		= TRUE
			recolorable	= TRUE
		}

		image
		{
			function	= FOCUS
